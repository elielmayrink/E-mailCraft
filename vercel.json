{
  "version": 2,
  "functions": {
    "backend/*.py": { "runtime": "python3.11" }
  },
  "builds": [
    { "src": "backend/main.py", "use": "@vercel/python" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/main.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "PIP_NO_CACHE_DIR": "1"
  }
}
